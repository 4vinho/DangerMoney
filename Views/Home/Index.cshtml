@model IEnumerable<ExpenseDTO>
@{
    ViewData["Title"] = "Gastos do Mês";
    decimal totalExpenses = Model.Sum(e => e.Amount);
}

<div class="container mt-5">
    <h2 class="mb-4">Gastos do Mês</h2>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
    }

    <div class="card mb-4 glassmorphism-card">
        <div class="card-body">
            <h5 class="card-title">Resumo Mensal</h5>
            <p class="card-text">Total de Gastos: <strong>@totalExpenses.ToString("C")</strong></p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Nenhum gasto registrado para este mês.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 glassmorphism-card">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <h6 class="card-subtitle mb-2"><span class="badge bg-secondary">@item.Type</span></h6>
                            <p class="card-text">
                                Valor: <strong>@item.Amount.ToString("C")</strong><br />
                                Data: @item.Date.ToString("dd/MM/yyyy")
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>